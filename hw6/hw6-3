#include <Servo.h>
int servoPin = 6;
Servo servo;
void setup() {
  Serial.begin(19200);
  servo.attach(servoPin);
}

void loop() {
  int i;
  for (i = 0; i < 180; i++) {
    Serial.println(i);
    servo.write(i);
    delay(20);
  }
  for (i = 180; i > 0; i--) {
    Serial.println(i);
    servo.write(i);
    delay(20);
  }
}
